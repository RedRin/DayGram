<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_show_bg"
    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="20dp"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#f3f1ed"
            android:gravity="center">

            <TextView
                android:id="@+id/detial_week_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/week_month_year_shape"
                android:gravity="right|center_vertical"
                android:textStyle="bold"
                android:text="SUNDAY"
                android:textSize="20dp"
                android:typeface="monospace"/>

            <TextView
                android:id="@+id/detial_month_year_text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/week_month_year_shape"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:text="/NOVEMBER 4/2015"
                android:textSize="20dp"
                android:typeface="monospace"/>



        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:fillViewport="true"
            android:fadeScrollbars="true"
            android:scrollbarSize="0dp"
            >

            <com.jnu.student.daygram.MyEditText
                android:id="@+id/edit_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f1ed"
                android:padding="20dp"
                android:textSize="17dp"
                android:gravity="left|top"
                android:textColor="#6f6f6d"
                android:text="今日打码今日打码今日打码今日打码今日打码今日打码"
                />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:background="#f3f1ed"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#f3f1ed">

                <ImageView
                    android:id="@+id/time_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#f3f1ed">

                <TextView
                    android:id="@+id/back_bottom"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:background="#e6e5e0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/done_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONE"
                    android:textSize="20dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#6f6f6d"
                    android:background="@drawable/year_shape"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>